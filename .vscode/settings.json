{
  "cSpell.words": ["hlogger"],
  "highlight.regexes": {
    "(input\\s+)(group)": {
      "regexFlags": "g",
      "filterLanguageRegex": "cpp",
      "decorations": [{}, { "color": "#569CD6" }]
    },
    "(?<!//.*)(ENUM_\\w+|[A-Z][a-zA-Z0-9]*[a-z][a-zA-Z0-9]*)(\\s+[&*]?\\s*|\\s*[&*]\\s*)(\\w+)": {
      "regexFlags": "g",
      "filterLanguageRegex": "cpp",
      "decorations": [
        { "color": "#4EC9B0" },
        {},
        { "color": "#9CDCFE" }
      ]
    }
  },
  "files.autoSave": "onFocusChange",
  "C_Cpp.files.exclude": {
    "**/*.mq5": true,
    "**/*.mqh": true
  },
  "editor.formatOnSave": false,
  "editor.formatOnType": false,
  "editor.formatOnPaste": false,
  "[cpp]": {
    "editor.defaultFormatter": null
  },
  "[c]": {
    "editor.defaultFormatter": null
  },
  "achilleshr.runonsave": {
    "commands": [
      {
        "match": "\\.(mqh|mq5)$",
        "cmd": "cd ${workspaceFolder} && make deploy"
      }
    ]
  }
}
